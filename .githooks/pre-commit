#!/bin/sh
# Pre-commit hook to update documentation

echo "🔄 Updating documentation from config..."
npm run docs:update

# Add the updated README to the commit if it was changed
if git diff --name-only | grep -q "README.md"; then
  echo "📝 README.md was updated, adding to commit"
  git add README.md
fi

echo "✅ Documentation update complete"
